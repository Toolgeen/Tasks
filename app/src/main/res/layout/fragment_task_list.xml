<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTaskCategoriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/pangolin"
        android:textSize="15sp"
        android:text="Отобразить задачи:"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchDayTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="день"
            android:layout_gravity="end"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchWeekTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="неделя"
            android:layout_gravity="end"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchMonthTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="месяц"
            android:layout_gravity="end"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchYearTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="год"
            android:layout_gravity="end"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/task_item"/>

</LinearLayout>